<UserControl x:Class="OpenCriticMetadata.OpenCriticMetadataSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pec="clr-namespace:PlayniteExtensions.Common"
             mc:Ignorable="d"
             xmlns:opencriticmetadata="clr-namespace:OpenCriticMetadata"
             d:DataContext="{d:DesignInstance Type=opencriticmetadata:OpenCriticMetadataSettingsViewModel}"
             xmlns:dd="urn:gong-wpf-dragdrop"
             d:DesignHeight="400" d:DesignWidth="600" d:Background="White">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <Grid Width="auto" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                    </Style>
                    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                        <Setter Property="Margin" Value="5,3"/>
                    </Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                        <Setter Property="Margin" Value="5,3"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                    </Style>
                    <pec:IntegerFormatConverter x:Key="IntConverter"/>
                </Grid.Resources>

                <TextBlock>Critic score average:</TextBlock>
                <ComboBox Grid.Row="0" Grid.Column="1" IsReadOnly="True" IsEditable="False" SelectedValuePath="Key" DisplayMemberPath="Value" Width="auto"
                          ItemsSource="{Binding CriticSources}" SelectedValue="{Binding Settings.CriticScoreSource}"/>
                <TextBlock Grid.Row="1" Grid.Column="0">Minimum critic review count:</TextBlock>
                <TextBox Width="70" Text="{Binding Settings.MinimumCriticReviewCount, Converter={StaticResource IntConverter}}" Grid.Row="1" Grid.Column="1"/>
                <TextBlock Grid.Row="2" Grid.Column="0">Minimum user review count:</TextBlock>
                <TextBox Width="70" Text="{Binding Settings.MinimumCommunityReviewCount, Converter={StaticResource IntConverter}}" Grid.Row="2" Grid.Column="1"/>
            </Grid>

            <TextBlock TextWrapping="Wrap">Use the following image types, in the specified order (drag and drop to reorder):</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Margin" Value="3,3,13,3"/>
                        <Setter Property="Grid.Row" Value="0"/>
                    </Style>
                    <Style TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
                        <Setter Property="SelectionMode" Value="Extended"/>
                        <Setter Property="MinHeight" Value="15"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="dd:DragDrop.IsDragSource" Value="True"/>
                        <Setter Property="dd:DragDrop.IsDropTarget" Value="True"/>
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="Margin" Value="0,0,10,0"/>
                        <Setter Property="Grid.Row" Value="1"/>                        
                    </Style>
                </Grid.Resources>

                <TextBlock Grid.Column="0" Grid.Row="0">Cover</TextBlock>
                <ListBox ItemsSource="{Binding Settings.CoverSources}" dd:DragDrop.DragDropContext="Cover"
                         Grid.Row="1" Grid.Column="0" d:ItemsSource="{d:SampleData ItemCount=5}" pec:IgnoreScrollBehaviour.IgnoreScroll="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel ToolTip="Drag me!" Orientation="Horizontal">
                                <TextBlock Text="░" Padding="10,0"/>
                                <CheckBox IsChecked="{Binding Checked}" Content="{Binding Name}" Width="Auto"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Grid.Row="0" Grid.Column="1">Background</TextBlock>
                <ListBox ItemsSource="{Binding Settings.BackgroundSources}" dd:DragDrop.DragDropContext="Background"
                         Grid.Row="1" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" pec:IgnoreScrollBehaviour.IgnoreScroll="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel ToolTip="Drag me!" Orientation="Horizontal">
                                <TextBlock Text="░" Padding="10,0"/>
                                <CheckBox IsChecked="{Binding Checked}" Content="{Binding Name}" Width="Auto"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>